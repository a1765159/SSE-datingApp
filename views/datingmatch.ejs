<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fa-solid fa-list-ul"></i>  Dating Match</h1>
      <a href="/dashboard" class="btn btn-secondary">Return to dashboard</a>
      <%- include("./partials/messages") %>
      <!-- Todo: show dating info as a calender for each one, highlight the day that has been occupied -->
        <% datingData.forEach(function(datingDatum){%>
        <table width=“400” height=“200" style="font-size:18px; border-bottom:1px solid gainsboro">
          <tr>
            <td >Nickname:</td>
            <td ><%= datingDatum.nickName %></td>
          </tr>
          <tr>
            <td >Sex:</td>
            <td ><%= datingDatum.sex %></td>
          </tr>
          <tr>
            <td >Age:</td>
            <td ><%= datingDatum.age %></td>
          </tr>
          <tr>
            <td >Email:</td>
            <td ><%= datingDatum.email %></td>
          </tr>
          <tr>
            <td  >Hobbies:</td>
            <td  ><%= datingDatum.hobbies %></td>
          </tr>
          <tr>
            <td >Location:</td>
            <td ><%= datingDatum.location %></td>
          </tr>
          <tr>
            <td >Covid Status:</td>
            <td ><%= datingDatum.covidStatus %></td>
          </tr>
          <tr>
            <td >Availability:</tr>
            <td ><%= datingDatum.availability %></td>
          </tr>
          </table>
          <!-- TODO: if not available, the button should be non-clickable -->
          <form action="/datingmatch" method="POST">
            <div class="form-group">
              <label for="date">Date</label>
              <input
                type="date"
                id="date"
                name="date"
                class="form-control"
                placeholder="Date"
              />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Date</button>
          </form>
        <%})%>
    </div>
  </div>
</div>